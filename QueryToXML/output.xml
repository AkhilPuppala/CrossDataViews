<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<View name="InvoiceSummary">
    <Tables>
        <Table alias="i" name="Invoice"/>
        <Table alias="il" name="InvoiceLine"/>
        <Table alias="c" name="Customer"/>
    </Tables>
    <Joins>
        <Join type="INNER">
            <LeftTable alias="i" name="Invoice"/>
            <RightTable alias="il" name="InvoiceLine"/>
            <OnCondition>i.InvoiceId = il.InvoiceId</OnCondition>
        </Join>
        <Join type="INNER">
            <LeftTable alias="i" name="Invoice"/>
            <RightTable alias="c" name="Customer"/>
            <OnCondition>i.CustomerId = c.CustomerId</OnCondition>
        </Join>
    </Joins>
    <Filters>
        <Condition>i.BillingCountry = 'USA'</Condition>
    </Filters>
    <Select>
        <Column>i.InvoiceId</Column>
        <Column>i.InvoiceDate</Column>
        <Column>i.Total</Column>
        <Column>il.InvoiceLineId</Column>
        <Column>il.UnitPrice</Column>
        <Column>il.Quantity</Column>
        <Column>c.CustomerId</Column>
        <Column>c.ContactName</Column>
    </Select>
</View>
